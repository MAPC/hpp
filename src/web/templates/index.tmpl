<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>HPP</title>

    <style>
        body {
            text-align: center;
        }

        form {
            width: 850px;
            margin: 0 auto;

            text-align: left;
        }

        .form-fields {
            display: flex; 
        }

        .form-field {
            flex: 1 0 31.33%;        
            margin: 0 .66%;
        }

        .select-wrapper + .select-wrapper {
            margin-top: 1rem;
        }

        .select-wrapper input[data-group] {
            margin-bottom: .5rem; 
        }

        select[multiple] {
            min-height: 10rem; 
            overflow-y: auto;
        }

        select[name="munis"] {
            height: 100%;
            max-height: 80vh;
            resize: vertical;
        }

        label {
            display: block;

            margin-bottom: .5rem; 
        }

        label[for="include_metadata"] {
            margin-top: 2rem;  
        }

        button[type="submit"] {
            float: right;

            margin-top: 4rem; 
        }
    </style>
</head>
<body>
    <h1>Housing Production Plan Data Tool</h1>

    <form method="POST">
        <div class="form-fields">
            <div class="form-field">
                <label for="munis">Municipalities</label>
                <select name="munis" multiple>
                    {% for muni in munis %}
                        <option value="{{muni}}">{{muni}}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="form-field">
                <label for="tables">Tables</label>

                {% for group, tables in table_groups.items() %}
                    <div class='select-wrapper'>
                        <input type="checkbox" data-group="{{group}}">{{group}}</input>
                        <select name="tables" multiple data-group="{{group}}">
                            {% for table in tables %}
                                <option value="{{table}}">{{table}}</option>
                            {% endfor %}
                        </select>
                    </div>
                {% endfor %}
            </div>

            <div class='form-field'>
                <label for="format">File Format</label>
                <select name="format">
                    {% for format in formats %}
                        <option value="{{format}}">{{format}}</option>
                    {% endfor %}
                </select>

                <label for="include_metadata">Include metadata? </label>
                <input type="checkbox" name="include_metadata" />

                <button type="submit">Download Data</button>
            </div>
        </div>
    </form>

    <script>
        window.addEventListener('load', function() {
            const groupSelectors = Array.from(document.querySelectorAll('input[data-group]')) ;

            groupSelectors.forEach(function(selector) {
                const group = document.querySelector('select[data-group="' + selector.dataset.group + '"]');
                const tables = Array.from(group.querySelectorAll('option'));

                selector.addEventListener('change', function() {
                    const options = Array.from(group.querySelectorAll('option'));

                    options.forEach(function(option) {
                        option.selected = selector.checked;         
                    }); 
                });

                group.addEventListener('click', function() {
                    selector.checked = false;              
                });

                tables.forEach(function(table) {
                    table.addEventListener('mousedown', function() {
                        table.dataset.isSelected = table.selected;//table.selected === 'true';
                    });
                    table.addEventListener('click', function() {
                        if (table.dataset.isSelected === 'true') {
                            table.selected = false;
                        }
                    });
                });
            });
        });
    </script>
</body>
</html>
