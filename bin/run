#!/bin/bash

PKG=hpp-app
WORKDIR=/usr/src/app

dir=$(dirname "$0")
if [ "$dir" == "bin" ]; then
    LOCAL="$(dirname "$PWD"/..)"
else
    LOCAL=$PWD
fi

source "$LOCAL/.env"

docker run \
    -it \
    --rm \
    -v "$LOCAL":"$WORKDIR" \
    -p "$WEB_PORT:$WEB_PORT" \
    --name ${PKG}_dev \
    ${PKG}
